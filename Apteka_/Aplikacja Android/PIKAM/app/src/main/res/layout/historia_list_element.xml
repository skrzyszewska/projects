<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    tools:context=".Historia"
    tools:showIn="@layout/activity_historia"
    tools:ignore="UnusedAttribute"
    tools:targetApi="o">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_margin="2dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_zamowienia"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:text="@string/todo"  />

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:text="@string/data_zamowienia"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginStart="125dp"
                android:text="@string/todo"
                android:textColor="@color/colorBlack"  />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Info">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/Nr"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/nr"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/Zdjecie"
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/zdjecie"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/Nazwa"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:text="@string/nazwa"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="211dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/Ilosc"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/ilosc"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="293dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/CenaZaSztuke"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/cena_za_sztuke"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="385dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/CenaRazem"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/cena_razem"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="467dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:id="@+id/Recepta"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/na_recepte"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/list_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/Suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_history">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="293dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:layout_width="88dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/razem"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="384dp"
                android:background="@color/colorGrey">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/razemcena_lista_element"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/todo"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/Suma"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorGrey" />

    </RelativeLayout>

</LinearLayout>