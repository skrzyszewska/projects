<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.projekt_zespolowy.pikam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/logo96x96"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo96x96"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,RtlEnabled"
        tools:targetApi="donut">
        <activity
            android:name=".AnonimMode"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PojedynczyLekActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchListResults"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Lista"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".KlientMode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AptekarzMode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Koszyk"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RejestracjaActivity"
            android:label="@string/title_activity_rejestracja"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Historia"
            android:label="@string/historia_zamowien"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MojeKonto"
            android:label="@string/moje_konto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListaKlientowActivity"
            android:label="@string/lista_klientow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EdytujLek"
            android:theme="@style/AppTheme.NoActionBar"/>
