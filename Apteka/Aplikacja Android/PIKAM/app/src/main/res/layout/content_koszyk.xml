<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pills_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchListResults"
    tools:showIn="@layout/activity_lista">

    <ProgressBar
        android:id="@+id/koszyk_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/koszyk_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/List"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <Button
            android:background="@drawable/color_button_one"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/zamow_Button"
            android:textColor="@color/colorWhite"
            android:text="Złoż zamówienie"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>