<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_marginTop="60dp">

    <ProgressBar
        android:id="@+id/edytuj_lek_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/edytuj_lek_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:layout_marginHorizontal="15dp"
            tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa: "
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nazwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="115dp"
                android:text="@string/todo"
                android:textSize="33sp" />

            <Button
                android:id="@+id/change_nazwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/color_button_one"
                android:text="@string/zmien"
                android:textColor="@color/colorWhite"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/changeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/recepte"
            tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ilość: "
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ilosc_edytuj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="50dp"
                android:text="@string/todo"
                android:layout_below="@id/emailTitle"/>

            <Button
                android:background="@drawable/color_button_one"
                android:textColor="@color/colorWhite"
                android:id="@+id/change_ilosc_edytuj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/zmien"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/changeImie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/changeEmail"
            tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cena: "
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cena_edytuj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/todo"
                android:layout_marginStart="55dp"/>

            <Button
                android:background="@drawable/color_button_one"
                android:textColor="@color/colorWhite"
                android:id="@+id/change_cena_edytuj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/zmien"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/changeNazwisko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="2dp"
            android:layout_below="@id/changeImie"
            tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opis: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/textView2" />

            <TextView
                android:id="@+id/opis_edytuj"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:text="@string/todo"
                android:textSize="20sp" />

            <Button
                android:background="@drawable/color_button_one"
                android:textColor="@color/colorWhite"
                android:id="@+id/change_opis_edytuj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/zmien"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/changeKod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/changeNazwisko"
            tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sklad: "
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sklad_edytuj"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/todo"
                android:layout_marginStart="60dp"/>

            <Button
                android:background="@drawable/color_button_one"
                android:textColor="@color/colorWhite"
                android:id="@+id/change_sklad_edytuj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/zmien"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recepte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="2dp"
            android:layout_below="@id/changePass"
            tools:targetApi="o">

            <CheckBox
                android:id="@+id/na_recepte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Na recepte?"
                android:textColor="@color/colorGrey"
                android:textSize="20sp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>